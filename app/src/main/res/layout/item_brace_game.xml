<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/brace_image"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:contentDescription="brace"
        android:src="@drawable/brace1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_title1"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:fontFamily="@font/passero_one"
        android:gravity="center"
        android:text="BRACE"
        android:textColor="@color/white"
        android:maxLines="1"
        android:maxLength="10"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/brace_image"
        app:layout_constraintEnd_toEndOf="@+id/brace_image"
        app:layout_constraintStart_toStartOf="@+id/brace_image"
        app:layout_constraintTop_toTopOf="@+id/brace_image" />

    <TextView
        android:id="@+id/detail_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/passero_one"
        android:gravity="center"
        android:text="2022"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/detail_title1"
        app:layout_constraintStart_toStartOf="@+id/detail_title1"
        app:layout_constraintTop_toBottomOf="@+id/detail_title1" />

</androidx.constraintlayout.widget.ConstraintLayout>